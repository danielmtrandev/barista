<!doctype html>
<html>
<head>
    <title>CURRENT ORDERS</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <h3>orders</h3>
        <ul class="orders">
            <% for(var i=0; i<orders.length; i++) {%>
            <li class="order">
                <span><%= orders[i].name %></span>
                <span><%= orders[i].orders %></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                <form action="/orders/complete" method="POST">
                    <input type="hidden" value="<%= orders[i].name %>" name="name">
                    <input type="hidden" value="<%= orders[i].orders %>" placeholder="orders" name="orders">
                    <input type="hidden" value="true" name="complete">
                    <button type="submit">COMPLETED</button>
                </form>
            </li>
            <% } %>

        </ul>

</div>
</body>
</html>